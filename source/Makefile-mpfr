include Makefile.variables

all:

MLI=mpfr.mli
MLSRC=mpfr.ml mpfr_pp.ml
MLINIT=mpfr_pp_install.ml
CSRC=mpfr_stub.c

LIBNAME=mpfr
STUBLIBNAME=ml$(LIBNAME)

WIFLAGS=
WLFLAGS=
ifneq ($(WITH_GMP),)
WIFLAGS+=-I$(WITH_GMP)/include
WLFLAGS+=-L$(WITH_GMP)/lib
endif
ifneq ($(WITH_MPFR),)
WIFLAGS+=-I$(WITH_MPFR)/include
WLFLAGS+=-L$(WITH_MPFR)/lib
endif

OCAMLCFLAGS=-w +a
CFLAGS=$(WIFLAGS) -std=gnu99 -Wall -Wextra

CCLIB=$(addprefix -cclib ,$(WLFLAGS) -lmpfr)
LDFLAGS=$(WLFLAGS)
LDLIB=-lmpfr -lgmp

$(BUILDDIR)/mpfr_stub.o: gmp_stub.h mpfr_stub.h mpfr_030000.h mpfr_030100.h mpfr_040000.h
$(BUILDDIR)/mpfr.cmi: gmp.mli
$(BUILDDIR)/mpfr.cmo: $(BUILDDIR)/mpfr.cmi
$(BUILDDIR)/mpfr.cmx: $(BUILDDIR)/mpfr.cmi
$(BUILDDIR)/mpfr_pp.cmo: override OCAMLCFLAGS+=-w -70
$(BUILDDIR)/mpfr_pp.cmo: $(BUILDDIR)/mpfr.cmi
$(BUILDDIR)/mpfr_pp.cmx: override OCAMLCFLAGS+=-w -70
$(BUILDDIR)/mpfr_pp.cmx: $(BUILDDIR)/mpfr.cmx
$(BUILDDIR)/mpfr_pp.cmi: $(if $(OCAMLC),$(BUILDDIR)/mpfr_pp.cmo,$(BUILDDIR)/mpfr_pp.cmx)
$(BUILDDIR)/mpfr_pp_install.cmo: override OCAMLCFLAGS+=-I $(OCAMLLIBDIR)/compiler-libs -w -70
$(BUILDDIR)/mpfr_pp_install.cmo: $(BUILDDIR)/mpfr_pp.cmo
$(BUILDDIR)/mpfr_pp_install.cmi: $(BUILDDIR)/mpfr_pp_install.cmo

include Makefile.rules
